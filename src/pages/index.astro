---
import Layout from "../layouts/Layout.astro";

export const prerender = false;

// Redirect authenticated users to dashboard
const user = Astro.locals.user;

if (user) {
  return Astro.redirect("/dashboard");
}
---

<Layout title="10xCards - Home">
  <div class="container mx-auto max-w-2xl px-4 py-16">
    <div class="text-center space-y-6">
      <h1 class="text-4xl font-bold tracking-tight">10xCards</h1>
      <p class="text-lg text-muted-foreground">AI-powered flashcard generation for effective learning</p>

      <div class="flex flex-col gap-4 items-center pt-8">
        <a
          href="/signin"
          class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-sm font-medium text-primary-foreground shadow hover:bg-primary/90 transition-colors"
        >
          Sign In to Get Started
        </a>

        <p class="text-sm text-muted-foreground">
          Don't have an account?{" "}
          <a href="/register" class="text-primary underline hover:no-underline">Register here</a>
        </p>
      </div>
    </div>
  </div>
</Layout>
