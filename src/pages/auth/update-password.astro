---
import AuthLayout from "../../layouts/AuthLayout.astro";
import { UpdatePasswordForm } from "../../components/auth";

// This page handles password updates after clicking the reset link
const user = Astro.locals.user;

// User must have an active session from the reset link
if (!user) {
  return Astro.redirect("/signin?error=session_expired");
}

export const prerender = false;
---

<AuthLayout title="Update Password - 10xCards">
  <UpdatePasswordForm client:load />
</AuthLayout>
